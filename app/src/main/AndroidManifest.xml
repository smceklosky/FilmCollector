<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.susie.filmcollector" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Actor"
            android:label="@string/title_activity_actor"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".Movie"
            android:label="@string/title_activity_movie" >
        </activity>
        <activity
            android:name=".AddMovie"
            android:label="@string/title_activity_add_movie"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".MovieSearch"
            android:label="@string/title_activity_movie_search"
            android:windowSoftInputMode="stateVisible" >
        </activity>
        <activity
            android:name=".MovieSearchResults"
            android:label="@string/title_activity_movie_search_results" >
        </activity>
    </application>

</manifest>
